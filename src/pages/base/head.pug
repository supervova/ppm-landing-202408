- const pageTitle = (page.title ? page.title + ' | ' : '') + (page.section ? page.section + ' | ' : '') + site.title.en
- const pageDesc = page.desc || site.desc.en

meta(charset='utf-8')
meta(name='viewport' content='width=device-width,initial-scale=1,viewport-fit=cover')
title= pageTitle
meta(name='description' content=pageDesc)

meta(property="og:title" content=pageTitle)
meta(property='og:description' content=pageDesc)
meta(property='og:type' content='website')
if page.link
  meta(property='og:url' content=page.link)
meta(property='og:image' content=page.img || site.img)
meta(name='twitter:card' content='summary_large_image')
if page.link
  link(rel='canonical' href=page.link)
link(rel='icon' href='/favicon.ico' sizes='32x32')
link(rel='icon' href=`${site.assets}/images/components/icon/favicon.svg` type='image/svg+xml')
link(rel='apple-touch-icon' href=`${site.assets}/images/components/icon/icon-192.png`)
link(rel='manifest' href='/manifest.json')

if site.fonts.googl
  link(rel='preconnect' href='https://fonts.googleapis.com')
  link(rel='preconnect' href='https://fonts.gstatic.com' crossorigin)
  link(rel='stylesheet' href='https://fonts.googleapis.com/css2?display=swap&family=' + site.fonts.google)
link(rel='stylesheet' href=`${site.theme}css/main.css?${timestamp}`)
